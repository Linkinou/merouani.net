{% extends 'base.twig' %}

{% block title %}{{ 'project2.title'|trans }}{% endblock %}

{% block body %}
    <!-- Site Main -->
    <main class="site-main">
        <article>
            <!-- Page Header -->
            <header class="page-header">
                <div class="wrapper">
                    <h1>{{ 'project2.title'|trans }}</h1>
                </div>
            </header>
            <!-- Page Header End -->

            <!-- Page Content -->
            <div class="wrapper">
                <!-- Project Info -->
                <div class="widget-projects-single-info o-top">
                    <div class="widget-flex">
                        <div class="flex-item">
                            <h2>{{ 'project.description.label'|trans }}</h2>
                            {{ 'project2.description.content'|trans|raw }}
                        </div>
                        <div class="flex-item">
                            <div class="widget-flex">
                                <div class="flex-item">
                                    <h2>{{ 'project.links.label'|trans }}</h2>
                                    <a href="https://www.docker.com/" target="_blank">Docker</a><br>
                                    <a href="https://docs.docker.com/compose/overview/" target="_blank">Docker Compose</a><br>
                                    <a href="https://jenkins.io/" target="_blank">Jenkins</a><br>
                                    <a href="https://github.com/zendesk/samson" target="_blank">Samson</a><br><br>
                                </div>
                                <div class="flex-item">
                                    <h2>{{ 'project.category.label'|trans }}</h2>
                                    <p>
                                        <a href="#">{{ 'index.filters.web.label'|trans }}</a>
                                        <span>,</span>
                                        <a href="#">{{ 'index.filters.devops.label'|trans }}</a>
                                    </p>
                                </div>
                                <div class="flex-item">
                                    <h2>{{ 'project.date.label'|trans }}</h2>
                                    <p>2015</p>
                                </div>
                                <div class="flex-item">
                                    <h2>{{ 'project.team.label'|trans }}</h2>
                                    <p>2</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Project Info End -->

                <!-- Project Gallery -->
                <div class="widget-gallery o-full">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="gallery-item">
                                <a href="{{ path('alfred') }}" title="{{ 'project2.title'|trans }}" class="popup-gallery">
                                    <img src="{{ asset('build/images/alfred.png') }}" alt="{{ 'project2.title'|trans }}">
                                </a>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="gallery-item">
                                <a href="img/jenkins.png" title="{{ 'project2.title'|trans }}" class="popup-gallery">
                                    <img src="{{ asset('build/images/jenkins.png') }}" alt="{{ 'project2.title'|trans }}">
                                </a>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="gallery-item">
                                <a href="img/samson.png" title="{{ 'project2.title'|trans }}" class="popup-gallery">
                                    <img src="{{ asset('build/images/samson.png') }}" alt="{{ 'project2.title'|trans }}">
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Projects Gallery End -->

                <!-- Navigation -->
                <nav class="widget-nav-post">
                    <ul>
                        <li class="prev">
                            <span>{{ 'project.navigation.previous.label'|trans }}</span>
                            <a href="{{ path('portfolio') }}">{{ 'project1.title'|trans }}</a>
                        </li>
                        <li class="all">
                            <a href="{{ path('homepage') }}"><i class="fa fa-bars" aria-hidden="true"></i></a>
                        </li>
                        <li class="next">
                            <span>{{ 'project.navigation.next.label'|trans }}</span>
                            <a href="{{ path('softdevWeb') }}">{{ 'project3.title'|trans }}</a>
                        </li>
                    </ul>
                </nav>
                <!-- Navigation End -->
            </div>
            <!-- Page Content End -->
        </article>
    </main>
    <!-- Site Main End -->
{% endblock %}
