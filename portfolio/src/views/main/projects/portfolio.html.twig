                                    <p>
                                        <a href="#">{{ 'index.filters.web.label'|trans }}</a>
                                    </p>
                                </div>
                                <div class="flex-item">
                                    <h2>{{ 'project.date.label'|trans }}</h2>
                                    <p>2016</p>
                                </div>
                                <div class="flex-item">
